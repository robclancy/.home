[user]
    name = Robbo
    email = mail@robertclancy.net

[color]
    ui = auto

[alias]
    c = commit
    di = diff
    st = status
    co = checkout
    amend = commit --amend
    aa = add --all
    b = branch
    pom = push origin master
    pod = push origin dev
    l = "!. ~/.githelpers && pretty_git_log"
    u = submodule update --init
    ur = submodule update --init --recursive
    size = "!. ~/.githelpers && show_git_sizes"